{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 85,
  "branches": 75,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "src/**/*.d.ts",
    "src/app/layout.tsx",
    "src/app/**/page.tsx",
    "src/types/**",
    "src/__tests__/**",
    "src/__mocks__/**"
  ],
  "reporter": ["text", "html", "lcov", "json"],
  "report-dir": "./coverage"
}
