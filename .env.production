# Production Environment Variables
NEXT_PUBLIC_APP_NAME=RentZambia
NEXT_PUBLIC_APP_URL=https://rentzambia.com

# NextAuth Configuration
NEXTAUTH_URL=https://rentzambia.com
NEXTAUTH_SECRET=your_production_secret_key

# Database
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/rentzambia

# Cloudinary (production)
CLOUDINARY_URL=cloudinary://prod_api_key:prod_api_secret@prod_cloud_name

# Twilio (production)
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_PHONE_NUMBER=your_production_twilio_phone_number

# Email Service (production)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@rentzambia.com

# Payment Processing (production)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_stripe_webhook_secret